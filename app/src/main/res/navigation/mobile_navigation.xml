<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="org.unsurv.unsurv_mapping.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_editCameraFragment"
            app:destination="@id/editCameraFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="org.unsurv.unsurv_mapping.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="org.unsurv.unsurv_mapping.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/editCameraFragment"
        android:name="org.unsurv.unsurv_mapping.ui.home.EditCameraFragment"
        android:label="fragment_edit_camera"
        tools:layout="@layout/fragment_edit_camera" />
</navigation>